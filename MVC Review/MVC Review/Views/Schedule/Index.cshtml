@model IEnumerable<MVC_Review.Models.FootballSchedule>

@{
    ViewBag.Title = "Index";
}

<h2>OU Football Schedule for @Model.First().Season</h2>

@foreach (var x in Model)
{
    if (x.IsHomeGame == true)
    {
        <div class="card" style="width:200px; height:250px; background-color: darkred; color: white; float: left; margin: 5px; padding: 5px; border-radius: 25px;">
            @*<img src="..." class="card-img-top" alt="...">*@
            <div class="card-body">
                <h5 class="card-title">OU vs. @x.Opponent </h5>
                <p class="card-text">@x.Date.ToLongTimeString()</p>
            </div>
        </div>
    }
    if (x.IsHomeGame == false)
    {
        <div class="card" style="width:200px; height: 250px; background-color: black; color: white; float:left; margin: 5px; padding:5px; border-radius: 25px;">
            @*<img src="..." class="card-img-top" alt="...">*@
            <div class="card-body">
                <h5 class="card-title">OU vs. @x.Opponent </h5>
                <p class="card-text">@x.Date.ToLongTimeString()</p>
            </div>
        </div>
    }
}
